<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ddoing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ddoing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ddoing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ddoing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="homeview_now_date_name">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            #0A5CEB
        </item>

    </style>

    <style name="homeview_date_now_start">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="homeview_todays_date">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            #11927B
        </item>

    </style>

    <style name="achievement">
        <item name="android:textSize">
            45sp
        </item>
    </style>

</resources>